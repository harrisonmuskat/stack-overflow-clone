<h1>Submit a New Question</h1>

<% unless @question.errors.empty? %>
  <div>
    <%= @question.errors.full_messages.to_sentence %>
  </div>
<% end %>

<%= form_for(@question) do |f| %>
<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>
<div class="hidden field">
  <%= f.hidden_field :user_id, value: 1 %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
